{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json",
    "ignore": [
      "**/.*"
    ]
  },
  "functions": { "source": "." },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/admin",
        "destination": "/admin.html"
      },
      {
        "source": "/login",
        "destination": "/admin.html"
      },
      {
        "source": "/signin",
        "destination": "/admin.html"
      },
      {
        "source": "/logout",
        "destination": "/admin.html"
      },
      {
        "source": "/graphql",
        "function": "graphql"
      },
      {
        "source": "/mooieman**",
        "function": "mooieman"
      },
      {
        "source": "/mooieman/{,**}",
        "function": "mooieman"
      },
      {
        "source": "/fraaievrouw**",
        "function": "fraaievrouw"
      },
      {
        "source": "/fraaievrouw/{,**}",
        "function": "fraaievrouw"
      },
      {
        "source": "/upload",
        "function": "upload"
      },
      {
        "source": "/count",
        "function": "count"
      },
      {
        "source": "/count/{,**}",
        "function": "count"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "firestore": {
      "port": "8080"
    },
    "storage": {
      "port": "1337"
    }
  }
}